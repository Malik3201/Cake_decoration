# =============================================================================
# DecoraBake Backend Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# ============ REQUIRED ============
# Server will NOT start without these!

# JWT Secrets (use strong random strings, minimum 32 characters in production)
JWT_ACCESS_SECRET=replace-with-strong-access-secret
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret

# MongoDB Connection
MONGODB_URI=mongodb://127.0.0.1:27017/decora_bake

# ============ OPTIONAL ============

# Node / Server
NODE_ENV=development
PORT=5000

# Token Expiry
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Password hashing
BCRYPT_SALT_ROUNDS=10

# CORS / Frontend
CLIENT_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# AI Assistant Configuration
AI_API_KEY=replace-with-your-ai-api-key
AI_MODEL=gpt-4.1-mini
AI_BASE_URL=https://api.openai.com/v1
